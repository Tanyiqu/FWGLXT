<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>sendEmail</servlet-name>
        <servlet-class>servlet.SendEmailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sendEmail</servlet-name>
        <url-pattern>/sendEmail</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registered</servlet-name>
        <servlet-class>servlet.RegisteredServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registered</servlet-name>
        <url-pattern>/registered</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>buyer</servlet-name>
        <servlet-class>servlet.BuyerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>buyer</servlet-name>
        <url-pattern>/buyer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>seller</servlet-name>
        <servlet-class>servlet.SellerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>seller</servlet-name>
        <url-pattern>/seller</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addHouse</servlet-name>
        <servlet-class>servlet.AddHouseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addHouse</servlet-name>
        <url-pattern>/addHouse</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>detail</servlet-name>
        <servlet-class>servlet.HouseDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>detail</servlet-name>
        <url-pattern>/detail</url-pattern>
    </servlet-mapping>

</web-app>